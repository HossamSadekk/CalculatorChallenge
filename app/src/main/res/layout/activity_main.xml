<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/expression"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:textSize="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:textSize="75dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/expression"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/result"
            app:layout_constraintEnd_toEndOf="@id/result"
            android:background="@color/colorPrimaryDark"
            android:text="+"
            android:textSize="50dp"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"

            />

        <Button
            android:id="@+id/subtract"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/plus"
            app:layout_constraintEnd_toEndOf="@id/result"
            android:background="@color/colorPrimaryDark"
            android:text="-"
            android:textSize="60dp"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/multiply"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/subtract"
            app:layout_constraintEnd_toEndOf="@id/result"
            android:background="@color/colorPrimaryDark"
            android:text="*"
            android:textSize="50dp"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/divide"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/multiply"
            app:layout_constraintEnd_toEndOf="@id/result"
            android:background="@color/colorPrimaryDark"
            android:text="/"
            android:textSize="50dp"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp"
            />


        <Button
            android:id="@+id/equal"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/divide"
            app:layout_constraintEnd_toEndOf="@id/result"
            android:background="@color/colorPrimaryDark"
            android:text="="
            android:textSize="50dp"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/backspace"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintEnd_toStartOf="@id/equal"
            app:layout_constraintTop_toTopOf="@id/equal"
            android:background="@color/colorAccent"
            android:text="Back"
            android:textSize="35dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/zero"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintEnd_toStartOf="@id/backspace"
            app:layout_constraintTop_toTopOf="@id/backspace"
            android:background="@color/colorAccent"
            android:text="0"
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/signdot"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintEnd_toStartOf="@id/zero"
            app:layout_constraintTop_toTopOf="@id/zero"
            app:layout_constraintStart_toStartOf="@id/one"
            android:background="@color/colorAccent"
            android:text="."
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="5dp"
            />

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/signdot"
            app:layout_constraintStart_toStartOf="@id/four"
            app:layout_constraintEnd_toStartOf="@id/two"
            android:background="@color/colorAccent"
            android:text="1"
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            />

        <Button
            android:id="@+id/two"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/zero"
            app:layout_constraintStart_toStartOf="@id/zero"
            android:background="@color/colorAccent"
            android:text="2"
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/three"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/backspace"
            app:layout_constraintStart_toStartOf="@id/backspace"
            android:background="@color/colorAccent"
            android:text="3"
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/one"
            app:layout_constraintStart_toStartOf="@id/seven"
            app:layout_constraintEnd_toStartOf="@id/five"
            android:background="@color/colorAccent"
            android:text="4"
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            />

        <Button
            android:id="@+id/five"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/two"
            app:layout_constraintStart_toStartOf="@id/two"
            android:background="@color/colorAccent"
            android:text="5"
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/six"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/three"
            app:layout_constraintStart_toStartOf="@id/three"
            android:background="@color/colorAccent"
            android:text="6"
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/four"
            app:layout_constraintStart_toStartOf="@id/clear"
            app:layout_constraintEnd_toStartOf="@id/eight"
            android:background="@color/colorAccent"
            android:text="7"
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            />

        <Button
            android:id="@+id/eight"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/five"
            app:layout_constraintStart_toStartOf="@id/five"
            android:background="@color/colorAccent"
            android:text="8"
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/nine"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/six"
            app:layout_constraintStart_toStartOf="@id/six"
            android:background="@color/colorAccent"
            android:text="9"
            android:textSize="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/rightBracket"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/eight"
            app:layout_constraintStart_toStartOf="@id/eight"
            android:background="@color/colorPrimaryDark"
            android:text="("
            android:textSize="50dp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            />

        <Button
            android:id="@+id/leftBracket"
            android:layout_width="70dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/nine"
            app:layout_constraintStart_toStartOf="@id/nine"
            android:background="@color/colorPrimaryDark"
            android:text=")"
            android:textSize="50dp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toTopOf="@id/seven"
            app:layout_constraintStart_toStartOf="@id/result"
            app:layout_constraintEnd_toStartOf="@id/rightBracket"
            android:background="@color/colorPrimaryDark"
            android:text="CE"
            android:textSize="50dp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>